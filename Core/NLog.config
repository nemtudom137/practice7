<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd">

	<extensions>
		<add assembly="Core"/>
	</extensions>
	
	<targets>
		<target name="file" xsi:type="File" fileName="${basedir}/Logs/log.txt" layout="${shortdate} ${date:format=HH\:mm\:ss}|${level}|${testname}|${message}|${exception}" />
		<target name="console" xsi:type="Console" layout="${date:format=HH\:mm\:ss}|${level}|${testname}|${message}|${exception}" />
	</targets>

	<rules>
		<logger name="*" minlevel="Trace" writeTo="console" />
		<logger name="*" minlevel="Trace" writeTo="file" />		
	</rules>
</nlog>